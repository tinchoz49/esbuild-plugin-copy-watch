{
  "name": "esbuild-plugin-copy-watch",
  "version": "0.0.7",
  "description": "Esbuild plugin to copy and watch for files",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    "import": "./src/index.js",
    "require": "./dist/index.js"
  },
  "files": [
    "src",
    "dist",
    "types"
  ],
  "scripts": {
    "start": "node index.js",
    "test": "uvu -i tests/from -i tests/to",
    "posttest": "npm run lint",
    "lint": "standard",
    "prepublishOnly": "npm test && npm run build && npm run types",
    "build": "esbuild src/index.js --outdir=dist --format=cjs",
    "types": "tsc src/index.js --declaration --allowJs --emitDeclarationOnly --outDir types"
  },
  "dependencies": {
    "@types/node": "^12.20.47",
    "anymatch": "^3.1.2",
    "chokidar": "^3.5.3",
    "fs-extra": "^10.0.1",
    "glob-parent": "^6.0.2",
    "is-glob": "^4.0.3"
  },
  "devDependencies": {
    "del": "^6.0.0",
    "esbuild": "^0.17.15",
    "standard": "^17.0.0",
    "typescript": "^4.6.3",
    "uvu": "^0.5.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinchoz49/esbuild-plugin-copy-watch.git"
  },
  "keywords": [
    "esbuild",
    "plugin",
    "copy",
    "watch"
  ],
  "author": {
    "name": "Mart√≠n Acosta",
    "email": "tinchoz49@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tinchoz49/esbuild-plugin-copy-watch/issues"
  },
  "homepage": "https://github.com/tinchoz49/esbuild-plugin-copy-watch#readme",
  "standard": {
    "env": [
      "node",
      "browser"
    ]
  },
  "types": "./types/index.d.ts"
}
